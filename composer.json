{
    "name": "jp3cki/totp",
    "type": "library",
    "description": "RFC 6238 / TOTP: Time-Based One-Time Password Algorithm",
    "keywords": ["totp", "otp", "rfc6238", "onetime", "password"],
    "license": "MIT",
    "authors": [
        {
            "name": "AIZAWA Hina",
            "email": "hina@fetus.jp"
        }
    ],
    "require": {
        "php": ">= 7.2",
        "php-64bit": ">= 7.2",
        "ext-hash": "*",
        "christian-riesen/base32": "^1.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.90",
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "config": {
        "platform": {
            "php": "7.2.0"
        },
        "sort-packages": true
    },
    "suggest": {
        "paragonie/random_compat": "The random_bytes() polyfill library for PHP 5.6 or earlier.",
        "ext-openssl": "Pseudo random bytes will generate with OpenSSL function if your system has not random_bytes() and /dev/urandom."
    },
    "autoload": {
        "psr-4": {
            "jp3cki\\totp\\": "src"
        }
    }
}
